# Description: Free library for arbitrary precision arithmetic
# URL: http://gmplib.org/

name=gmp
version=5.1.1
release=1
source=(ftp://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
   cd $name-$version

   ./configure --build=$BUILD \
               --host=$HOST \
               --prefix=/usr \
               --enable-cxx \
               --without-readline

   make -j $JOBS
   make DESTDIR=$PKG install

   rm -r $PKG/usr/share

   # Fix libtool files
   fix_la_files $PKG
}
