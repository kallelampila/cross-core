# Description: Library giving userland programs access to USB devices
# URL: http://libusb.org/

name=libusb
version=1.0.17
release=1
source=(http://downloads.sourceforge.net/libusbx/libusbx-$version.tar.bz2)
depends=systemd

build () {
   cd libusbx-$version
  
   ./configure --build=$BUILD \
               --host=$HOST \
               --prefix=/usr

   make -j $JOBS
   make DESTDIR=$PKG install

   # Fix libtool files
   fix_la_files $PKG
}
